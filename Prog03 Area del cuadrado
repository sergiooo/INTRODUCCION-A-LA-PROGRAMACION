// Descripcion: Calculo del Area del cuadrado

#include "stdafx.h"
#include "stdio.h"
#include "conio.h"
#include <math.h>

void main()
{float lado, area;
printf("\n----------CALCULO DEL AREA DEL CUADRADO----------");
printf("\n-------------------------------------------------");
printf("\n\n\n DEFINA LADO DEL CUADRADO: ");
scanf("%f", &lado); 
area= pow(lado, 2);
printf("\n EL AREA DEL CUADRADO ES: %f", area);
 getch();
}
